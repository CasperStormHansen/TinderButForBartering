<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TinderButForBartering.UserProductDetailsPage"
             Title="Min vare">

    <ScrollView>
        <VerticalStackLayout 
        Padding="20">

            <Label 
            Text="The details of one of the user's own products."
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            x:Name="ProductDetailsLabel"/>

            <Entry
            HorizontalOptions="Start"
            Placeholder="Overskrift" 
            SemanticProperties.Hint="Varens overskrift"
            WidthRequest="100"
            Margin="20"
            x:Name="Titel"/>

            <Editor
            HorizontalOptions="Center"
            Placeholder="Beskrivelse" 
            SemanticProperties.Hint="Beskrivelse af varen"
            WidthRequest="300"
            MinimumHeightRequest="150"
            AutoSize="TextChanges"
            Margin="20"
            x:Name="Description"/>

            <Label 
            Text="Byt eller pyt"
            VerticalOptions="Center"
            Margin="20"/>

            <Switch 
            HorizontalOptions="Start"
            Margin="20,0,0,0"
            OnColor="Gray"
            ThumbColor="Green" 
            x:Name="Switch"/>

            <Button
            Text="Tilføj"
            BackgroundColor="Green"
            Clicked="OnAddProduct_Clicked"
            x:Name="AddNewProductButton"/>

            <Button
            Text="Godkend ændringer"
            BackgroundColor="Green"
            Clicked="OnChangeProduct_Clicked"
            x:Name="ChangeProductButton"/>

            <Button
            Text="Fortryd"
            BackgroundColor="Orange"
            Clicked="OnCancel_Clicked"/>

            <Button
            Text="Slet"
            BackgroundColor="Red"
            Clicked="OnDeleteProduct_Clicked"
            x:Name="DeleteProductButton"/>
            
            <Button
            Text="Tag billede"
            BackgroundColor="Blue"
            Clicked="OnGetPicture_Clicked"
            x:Name="CameraButton"/>

            <Button
            Text="Vælg billede fra galleri"
            BackgroundColor="Blue"
            Clicked="OnGetPicture_Clicked"
            x:Name="GalleryButton"/>

            <Image 
            Source="dotnet_bot.svg"
            x:Name="PrimaryPicture"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>