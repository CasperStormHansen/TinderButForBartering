    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="hamburger_icon.png" 
                     Order="Primary" 
                     Priority="0" 
                     Clicked="OnHamburgerIcon_Clicked"/>
    </ContentPage.ToolbarItems>

    <RefreshView
        x:Name="RefreshView"
        IsRefreshing="false">
        <ScrollView>
            <StackLayout>
            
            <Grid
                HeightRequest="50"
                BackgroundColor="{StaticResource MidGreen}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

                <Button
                    Grid.Column="0"
                    Text="varer"
                    TextColor="Black"
                    BackgroundColor="Transparent"
                    FontSize="Medium"
                    IsEnabled="False"
                    x:Name="MyGoodsButton"
                    Clicked="OnMyGoodsButton_Clicked" />

                <Button
                    Grid.Column="1"
                    Text="ønsker"
                    TextColor="Black"
                    BackgroundColor="Transparent"
                    FontSize="Medium"
                    IsEnabled="False"
                    x:Name="MyWishesButton"
                    Clicked="OnMyWishesButton_Clicked" />

                <Button
                    Grid.Column="2"
                    Text="matches"
                    TextColor="Black"
                    BackgroundColor="Transparent"
                    FontSize="Medium"
                    IsEnabled="False"
                    x:Name="MyMatchesButton"
                    Clicked="OnMyMatchesButton_Clicked" />
        </Grid>

                <Grid>
                    <Image 
                        x:Name="SwipingPicture"
                        VerticalOptions="Start"/>
                    <ImageButton 
                                HeightRequest="400" 
                                BackgroundColor="Transparent" 
                                x:Name="DetailsButton"
                                Clicked="OnDetailsButton_Clicked" />
                </Grid>


                <Grid
                HeightRequest="50"
                BackgroundColor="{StaticResource LightGreen}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="90"/>
                        <RowDefinition Height="90"/>
                    </Grid.RowDefinitions>

                    <Button
                    Grid.Column="0"
                    Grid.Row="0"
                    Text="Nej"
                    FontSize="Large"
                    WidthRequest="64"
                    HeightRequest="64"
                    CornerRadius="32"
                    BackgroundColor="{StaticResource DarkGreen}"
                    TextColor="White"
                    x:Name="NoButton"
                    Clicked="OnNoButton_Clicked"/>

                    <Label
                        Grid.Column="1"
                        Grid.Row="0"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        FontSize="Large"
                        LineBreakMode="WordWrap"
                        x:Name="SwipingTitle"/>

                    <Button
                    Grid.Column="2"
                    Grid.Row="0"
                    Text="Ja"
                    FontSize="Large"
                    WidthRequest="64"
                    HeightRequest="64"
                    CornerRadius="32"
                    BackgroundColor="{StaticResource DarkGreen}"
                    TextColor="White"
                    x:Name="YesButton"
                    Clicked="OnYesButton_Clicked" />

                    <Button
                    Grid.Column="2"
                    Grid.Row="1"
                    Text="... og vil endda betale penge!"
                    LineBreakMode="WordWrap"
                    WidthRequest="125"
                    HeightRequest="60"
                    BackgroundColor="{StaticResource DarkGreen}"
                    TextColor="White"
                    x:Name="WillPayButton"
                    Clicked="OnWillPayButton_Clicked" />
                </Grid>



                <!--To be deleted-->
                <Image 
                    WidthRequest="300"
                    x:Name="UserPicture"
                    Margin="20"/>

                <!--Right position?-->
                <ActivityIndicator 
                    x:Name="BusyIndicator"
                    IsRunning="True"
                    IsVisible="false"/>
            </StackLayout>
        </ScrollView>
    </RefreshView>
</ContentPage>
